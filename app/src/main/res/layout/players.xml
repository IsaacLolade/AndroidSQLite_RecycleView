<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/player_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="1"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.52" />

            <TextView
                android:id="@+id/PlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/player_id"
                app:layout_constraintTop_toTopOf="@+id/player_id"
                android:padding="10dp" />

            <TextView
                android:id="@+id/player_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/PlayerName"
                app:layout_constraintTop_toTopOf="@+id/player_id"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/player_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/player_club"
                app:layout_constraintTop_toTopOf="@+id/player_id"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/player_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="s"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/player_position"
                app:layout_constraintTop_toTopOf="@+id/player_id"
                android:padding="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>